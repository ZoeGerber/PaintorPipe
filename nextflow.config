process {
    cpus = 2
    memory = '8 GB'

    withName: PREPPAINTOR_splitlocus {
        cpus = 22
        memory = '60 GB'
    }

    withName: PAINTOR_run {
        memory = '32 GB'
    }

     withName: CANVIS_run {
        memory = '16 GB'
    }
}

profiles {
    slurm {
        process.executor = 'slurm'
    }

    singularity {
        singularity.enabled = true
        singularity.autoMount = true
        process.container = 'library://zgerber/paintorpipe/mainimage:0.1'
    }
}


